<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="3dp" >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@drawable/shape_grupos_2"
        android:gravity="center_vertical|center_horizontal"
        android:padding="4dp"
        android:text="Totalização do Pedido" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="100" >

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="27"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Unidade de Faturamento Por Pauta" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_grupos_1"
                android:orientation="vertical" >

                <aca.libs.ui.AfvListView2
                    android:id="@+id/_total_pedido_novo_lvGrade"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp" >
                </aca.libs.ui.AfvListView2>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="32"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Itens Vendidos..." />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_grupos_1"
                android:orientation="vertical" >

                <aca.libs.ui.AfvListView2
                    android:id="@+id/_total_pedido_novo_lvItens"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp" >
                </aca.libs.ui.AfvListView2>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="41"
            android:orientation="vertical"
            android:weightSum="100" >

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="30"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Saldo..." />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape_grupos_1"
                    android:orientation="vertical" >

                    <aca.libs.ui.AfvListView2
                        android:id="@+id/_total_pedido_novo_lvSaldoFlex"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp" >
                    </aca.libs.ui.AfvListView2>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Totais..." />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:background="@drawable/shape_grupos_1"
                    android:weightSum="100" >

                    <aca.libs.ui.AfvListView2
                        android:id="@+id/_total_pedido_novo_lvTotais"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="20" >
                    </aca.libs.ui.AfvListView2>

                    <ImageButton
                        android:id="@+id/_total_pedido_imgBtnSemaforo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="80"
                        android:contentDescription="semaforo"
                        android:cropToPadding="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/traffic_green" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/_total_pedido_novo_tvTotalPedido"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape_grupos_1"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="4dp"
                    android:text="Total do Pedido R$"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>